<div class="row">
  <div class="col-md-6 col-md-offset-3 ">

<div class="box box2">
          <%= image_tag(@recipe.image(:medium), :class => "img-rounded img-responsive" )%>

      <p class="description">
       Title:<%= @recipe.title %><br>
       </p>
       <p class="content">
       Description:<%= @recipe.description %><br>
       Steps:<%= @recipe.steps %><br>
       Time:<%= @recipe.time %> minutes<br>
       Serving Size:<%= @recipe.serving_size %><br>
       Ingredients<%= @recipe.ingredients %><br>
       Allergies:<%= @recipe.allergies %><br>
      <p>
        <strong>
          Posted by <%= @recipe.user.name %>
        </strong>
      </p>
      
      <%= link_to 'Back', recipes_path %>
  </div>
  <h2>Comments</h2>
  <% @comment.each do |comment| %>
    <%= comment.content %>
  <% end %>

  <form action="/comments" method='post'>
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
    <input type="text" name="content">
    <input type='hidden' name='recipe_id' value='<%= @recipe.id %>'>
    <input type="submit" value="Post a Comment!">
  </form>
</div>

</div>

